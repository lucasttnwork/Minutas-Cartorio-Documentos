  "descricao": "Schema de extracao para Comprovante de Transacao Financeira",
  "complexidade": "MEDIA",
  "campos": [
    {
      "nome": "banco_origem",
      "tipo": "string",
      "obrigatorio": false,
      "regex": null,
      "exemplo": "SANTANDER",
      "nivel_extracao": 2,
      "confianca_esperada": "alta",
      "descricao": "Banco de origem da transacao"
    },
    {
      "nome": "banco_destino",
      "tipo": "string",
      "obrigatorio": false,
      "regex": null,
      "exemplo": "BANCO DO BRASIL",
      "nivel_extracao": 2,
      "confianca_esperada": "media",
      "descricao": "Banco de destino (para TED/DOC)"
    },
    {
      "nome": "valor_pago",
      "tipo": "number",
      "obrigatorio": true,
      "regex": "R\\$\\s*[\\d.,]+",
      "exemplo": "15000.00",
      "nivel_extracao": 1,
      "confianca_esperada": "alta",
      "descricao": "Valor da transacao"
    },
    {
      "nome": "data_pagamento",
      "tipo": "date",
      "obrigatorio": true,
      "regex": "\\d{2}/\\d{2}/\\d{4}",
      "exemplo": "27/01/2026",
      "nivel_extracao": 1,
      "confianca_esperada": "alta",
      "descricao": "Data do pagamento"
    },
    {
      "nome": "hora_transacao",
      "tipo": "string",
      "obrigatorio": false,
      "regex": "\\d{2}:\\d{2}(:\\d{2})?",
