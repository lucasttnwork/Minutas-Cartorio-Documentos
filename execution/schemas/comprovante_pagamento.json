      "nivel_extracao": 2,
      "confianca_esperada": "alta",
      "descricao": "Dados do pagador",
      "campos_internos": [
        {"nome": "nome", "tipo": "string"},
        {"nome": "cpf_cnpj", "tipo": "string"},
        {"nome": "banco", "tipo": "string"},
        {"nome": "agencia", "tipo": "string"},
        {"nome": "conta", "tipo": "string"}
      ]
