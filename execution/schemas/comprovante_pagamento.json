      "nivel_extracao": 1,
      "confianca_esperada": "alta",
      "descricao": "Hora da transacao"
    },
    {
      "nome": "codigo_autenticacao",
      "tipo": "string",
      "obrigatorio": false,
      "regex": "[A-Z0-9.-]+",
      "exemplo": "1234.5678.9012.3456",
      "nivel_extracao": 1,
      "confianca_esperada": "alta",
      "descricao": "Codigo de autenticacao bancaria"
    },
    {
      "nome": "tipo_transacao",
      "tipo": "string",
      "obrigatorio": false,
      "regex": "(PIX|TED|DOC|BOLETO|DEPOSITO|TRANSFERENCIA)",
      "exemplo": "PIX",
      "nivel_extracao": 2,
      "confianca_esperada": "alta",
      "descricao": "Tipo da transacao"
    },
    {
      "nome": "beneficiario",
      "tipo": "object",
      "obrigatorio": false,
      "regex": null,
